      "Read(**/credentials*)",
      "Bash(sudo:*)"
    ],
    "ask": [
      "Bash(rm:*)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "mkdir -p .claude/dumps .claude/backlog .claude/specs"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "cd \"$CLAUDE_PROJECT_DIR\" && bun lint --quiet && bun typecheck"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "cd \"$CLAUDE_PROJECT_DIR\" && bun lint --quiet && bun typecheck"
          }
        ]
      }
    ]
  }
