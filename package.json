{
  "name": "foundry",
  "version": "0.0.1",
  "description": "CLI-based technical specification constructor with AI-driven Q&A and visual artifacts",
  "type": "module",
  "bin": {
    "foundry": "./bin/foundry.mjs"
  },
  "scripts": {
    "dev": "bun --bun next dev",
    "dev:turbo": "bun --bun next dev --turbopack",
    "build": "bun --bun next build",
    "start": "bun --bun next start",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "test": "bun test",
    "graph": "bun src/lib/graph/cli/run.ts",
    "dispatch": "bun src/lib/graph/cli/run.ts dispatch.config.ts",
    "issue-processor": "bun src/lib/graph/cli/run.ts issue-processor.config.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:up": "docker compose up -d postgres",
    "db:down": "docker compose down"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.0",
    "@anthropic-ai/sdk": "^0.27.0",
    "@auth/drizzle-adapter": "^1.11.1",
    "@dagrejs/dagre": "^2.0.0",
    "@dagrejs/graphlib": "^2.2.4",
    "@dbml/core": "^3.11.0",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@google/generative-ai": "^0.24.1",
    "@headlessui/react": "^1.7.0",
    "@heroicons/react": "^2.2.0",
    "@tailwindcss/postcss": "^4.0.0",
    "@xyflow/react": "^12.0.0",
    "chokidar": "^3.5.0",
    "drizzle-orm": "^0.38.0",
    "glob": "^10.3.0",
    "graphql": "^16.12.0",
    "gray-matter": "^4.0.0",
    "handlebars": "^4.7.0",
    "js-yaml": "^4.1.0",
    "nanoid": "^5.0.0",
    "next": "^15.0.0",
    "next-auth": "^5.0.0-beta.30",
    "next-safe-action": "^8.0.11",
    "openai": "^6.15.0",
    "postcss": "^8.4.0",
    "postgres": "^3.4.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hot-toast": "^2.6.0",
    "simple-git": "^3.30.0",
    "tailwindcss": "^4.0.0",
    "zod": "^3.22.0",
    "zod-to-json-schema": "^3.22.0",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@happy-dom/global-registrator": "^17.0.0",
    "@testing-library/dom": "^10.0.0",
    "@testing-library/react": "^16.0.0",
    "@types/bun": "^1.0.0",
    "@types/js-yaml": "^4.0.0",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^8",
    "@typescript-eslint/parser": "^8",
    "drizzle-kit": "^0.30.0",
    "eslint": "^9",
    "eslint-config-next": "^15.5.9",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  }
}
